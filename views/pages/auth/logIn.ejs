<%- include('../../partials/header.ejs') %>
<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <% if (errors !== null) { %>
        <% const msgs = [errors.username, errors.password] %>
        <% msgs.forEach(msg => { %>
          <div class="alert alert-danger alert-dismissible fade show my-2" role="alert">
            <strong><%= msg %> </strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% }) %> 
      <% } %>
    </div>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
    </div>
    <div class="col">
      <img src="/images/logo.png" alt="logo" height="80px" width="auto" class="mx-auto d-block my-2">
      <div class="card my-4">
        <div class="card-body bg-transparent">
          <h5 class="card-text text-center pt-2">Login Now</h5>
        </div>
        <div class="card-body">
          <form action="/auth/login" method="post">
            <div class="mb-3">
              <label for="username" class="form-label">User name</label>
              <input type="text" class="form-control" id="username" name="username" placeholder="enter valid username">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="enter valid password">
            </div>
            <div class="mb-3">
              <p class="mt-2">Don't have an account? <a href="/auth/signup">signup now</a></p>
              <input type="submit" class="btn btn-primary" value="log in">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>
</body>
</html>
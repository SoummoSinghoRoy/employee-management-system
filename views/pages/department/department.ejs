<%- include('../../partials/header.ejs') %>
<div class="container-fluid">
  <div class="row g-4">
    <div class="col-3 px-0" style="background-color: #86A3B8;">
      <%- include('../../partials/sidebar.ejs') %>
    </div>
    <div class="col-9">
      <div class="card my-3 py-3">
        <div class="card-body">
          <h4>
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-clipboard2" viewBox="0 0 16 16">
              <path d="M3.5 2a.5.5 0 0 0-.5.5v12a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5v-12a.5.5 0 0 0-.5-.5H12a.5.5 0 0 1 0-1h.5A1.5 1.5 0 0 1 14 2.5v12a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 14.5v-12A1.5 1.5 0 0 1 3.5 1H4a.5.5 0 0 1 0 1h-.5Z"/>
              <path d="M10 .5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5.5.5 0 0 1-.5.5.5.5 0 0 0-.5.5V2a.5.5 0 0 0 .5.5h5A.5.5 0 0 0 11 2v-.5a.5.5 0 0 0-.5-.5.5.5 0 0 1-.5-.5Z"/>
            </svg>
            Add department
          </h4>

          <% if (errors !== null) { %>
            <% if (errors.departmentName) { %>
              <div class="alert alert-danger alert-dismissible fade show my-2" role="alert">
                <strong><%=  errors.departmentName %> </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% } %>
          <% } %>

          <form action="/department" method="post" class="my-3">
            <div class="input-group">
              <span class="input-group-text">Department name</span>
              <input type="text" aria-label="First name" class="form-control" name="departmentName">
              <input type="submit" class="btn btn-outline-primary ms-2" value="Add new department">
            </div>
          </form>
        </div>

        <div class="card-body">
          <h5 class="text-secondary mb-3">List of departments</h5>
          <table class="table table-bordered table-striped" id="department_table">
            <thead>
              <tr class="text-center">
                <th>No.</th>
                <th>Department name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="text-center">1</td>
                <td>Software development</td>
                <td class="text-center">
                  <div class="d-grid gap-2 d-md-block">
                    <a class="btn btn-outline-warning px-4" href="#" role="button">Edit</a>
                    <a class="btn btn-outline-danger" href="#" role="button">Delete</a>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>
</body>
</html>
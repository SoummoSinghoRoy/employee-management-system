<%- include('../../partials/header.ejs') %>
<div class="container-fluid">
  <div class="row g-4">
    <div class="col-3 px-0" style="background-color: #86A3B8;">
      <%- include('../../partials/sidebar.ejs') %>
    </div>
    <div class="col-9">
      <div class="card m-4">
        <div class="card-body">
          <h4 class="text-secondary text-center my-4">Employee Registration</h4>
          <form action="/employee/registration" method="post" enctype="multipart/form-data" class="my-3">
            <div class="row">
              <div class="col">
                <label for="fullName" class="fw-semibold mb-1">Employee Name</label>
                <input type="text" class="form-control" id="fullName" name="fullName">
              </div>
              <div class="col">
                <label for="departmnet" class="fw-semibold mb-1">Choose department</label>
                <% if (departmentList.length !== 0) { %>
                  <select class="form-select" name="departmnet" aria-label="Default select example">
                    <option selected>Select one department...</option>
                    <% departmentList.forEach(list => { %>
                      <option value="<%= list.id %>"><%= list.departmentName %></option>
                    <% }) %>
                  </select>
                <% }else {%>
                  <p class="py-2">Create department fist <a class="text-decoration-none" href="/department">create now</a></p>
                <% } %>
              </div>
            </div>

            <div class="row my-3">
              <div class="col">
                <label for="joiningDate" class="fw-semibold mb-1">Joined Date</label>
                <input type="date" class="form-control" id="establishDay" name="joiningDate">
              </div>
              <div class="col">
                <label for="profilePic" class="fw-semibold mb-1">Picutre</label>
                <input type="file" class="form-control" id="profilePic" name="profilePic">
                <p class="text-warning mt-2" id="warning">Image must be less then 200kb & resulation width 200px * height 200px</p>
              </div>
            </div>

            <div class="row my-3">
              <div class="col">
                <label for="role" class="fw-semibold mb-1">Role</label>
                <input type="text" class="form-control" id="role" name="role">
              </div>
              <div class="col">
                <label for="salary" class="fw-semibold mb-1">Salary</label>
                <input type="text" class="form-control" id="salary" name="salary">
              </div>
            </div>

            <div class="row">
              <div class="col">
                <label for="email" class="fw-semibold mb-1">Email</label>
                <input type="email" class="form-control" id="email" name="email">
              </div>
              <div class="col">
                <label for="contactNo" class="fw-semibold mb-1">Contact No.</label>
                <input type="tel" class="form-control" id="contactNo" name="contactNo">
              </div>
            </div>

            <div class="row my-3">
              <div class="col">
                <label for="nid_no" class="fw-semibold mb-1">National id no</label>
                <input type="number" class="form-control" id="nid_no" name="nid_no">
              </div>
              <div class="col">
                <label for="education" class="fw-semibold mb-1">Education status</label>
                <input type="text" class="form-control" id="education" name="education">
              </div>
            </div>

            <h5 class="text-muted my-3">Present Address</h5>
            <div class="row">
              <div class="col">
                <label for="present_street" class="fw-semibold mb-1">Street</label>
                <input type="text" class="form-control" id="present_street" name="present_street">
              </div>
              <div class="col">
                <label for="present_city" class="fw-semibold mb-1">City</label>
                <input type="text" class="form-control" id="present_city" name="present_city">
              </div>
            </div>
            <div class="row my-3">
              <div class="col">
                <label for="present_district" class="fw-semibold mb-1">District</label>
                <input type="text" class="form-control" id="present_district" name="present_district">
              </div>
              <div class="col">
                <label for="present_country" class="fw-semibold mb-1">Country</label>
                <input type="text" class="form-control" id="present_country" name="present_country">
              </div>
            </div>

            <h5 class="text-muted my-3">PermanentAddress</h5>
            <div class="row">
              <div class="col">
                <label for="permanent_street" class="fw-semibold mb-1">Street</label>
                <input type="text" class="form-control" id="permanent_street" name="permanent_street">
              </div>
              <div class="col">
                <label for="permanent_city" class="fw-semibold mb-1">City</label>
                <input type="text" class="form-control" id="permanent_city" name="permanent_city">
              </div>
            </div>
            <div class="row my-3">
              <div class="col">
                <label for="permanent_district" class="fw-semibold mb-1">District</label>
                <input type="text" class="form-control" id="permanent_district" name="permanent_district">
              </div>
              <div class="col">
                <label for="permanent_country" class="fw-semibold mb-1">Country</label>
                <input type="text" class="form-control" id="permanent_country" name="permanent_country">
              </div>
            </div>
            
            <input class="btn btn-primary" type="submit" value="Registration">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>
</body>
</html>